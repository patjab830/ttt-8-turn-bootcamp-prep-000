#!/usr/bin/env ruby

require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)

def turn(board)
  until (valid_move?(board, index))
    puts "Please enter 1-9"
    inp = gets.strip
    index = input_to_index(inp)
  end
  
  move(board, index)
  display_board(board)
end

turn(board)